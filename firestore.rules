rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /jobopenings/{jobId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    match /jobapplications/{applicationId} {
      allow read: if false;
      allow create: if request.auth != null;
    }
    match /volunteers/{volunteerId} {
      allow read: if false;
      allow create: if request.auth != null;
    }
    match /cvs/{cvId} {
      allow read: if false;
      allow create: if request.auth != null;
    }
    match /admins/{adminId} {
      allow read, write: if request.auth != null && (request.auth.token.email in ["raniem57@gmail.com", "info@higher.com.ng"]);
    }
  }
}